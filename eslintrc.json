{
    "extends": ["standard", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "rules": {
        "no-console": "off",
        "no-unused-vars": [
            "error",
            {
                "args": "all",
                "argsIgnorePattern": "^_+$",
                "varsIgnorePattern": "^_+$"
            }
        ],
        "no-warning-comments": "warn",
        "require-jsdoc": 0,
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ]
    }
}
